= form_with(model: @application) do |f|
  - if @application.errors.any?
    #error_explanation
      %h2= "#{pluralize(@application.errors.count, "error")} prohibited this application from being saved:"
      %ul
        - @application.errors.full_messages.each do |message|
          %li= message
  %div{:class => 'edit-options-row'}
    =label_tag(:round, "Round", :id => 'text-field-label')
    =f.text_field(:round)
  %div{:class => 'edit-options-row'}
    =label_tag(:business_name, "Business Name", :id => 'text-field-label')
    =f.text_field(:business_name)
    =label_tag(:business_size, "Number of Employees", :id => 'text-field-label')
    =f.text_field(:business_size)
    =label_tag(:jobs_retained, "Jobs Retained >=", :id => 'text-field-label')
    =f.text_field(:jobs_retained)
  %div{:class => 'edit-options-row'}
    =label_tag(:ein, "EIN", :id => 'text-field-label')
    =f.text_field(:ein)
    =label_tag(:bin, "BIN", :id => 'text-field-label')
    =f.text_field(:bin)
    =label_tag(:naics, "NAICS", :id => 'text-field-label')
    =f.text_field(:naics)
  %div{:class => 'edit-options-row'}
    =label_tag(:zip, "ZIP", :id => 'text-field-label')
    =f.text_field(:zip)
    =label_tag(:county, "County", :id => 'text-field-label')
    =f.text_field(:county)
    =label_tag(:city, "City", :id => 'text-field-label')
    =f.text_field(:city)
  %div{:class => 'edit-check-options-row'}
  %h4{:class => 'demo-header'} Business Type:
  =f.radio_button(:business_type, "Sole Proprietorship")
  =label_tag(:business_type, "Sole prop")
  =f.radio_button(:business_type, "Prop Partnership")
  =label_tag(:business_type, "Prop Partnership")
  =f.radio_button(:business_type, "Corporation")
  =label_tag(:business_type, "Corporation")
  =f.radio_button(:business_type, "LLC")
  =label_tag(:business_type, "LLC")
  =f.radio_button(:business_type, "501(c)3")
  =label_tag(:business_type, "501(c)(3)")
  %div{:class => 'edit-check-options-row'}
  .actions
    = f.submit 'Save'
