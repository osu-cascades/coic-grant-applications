= form_for @note do |f|
  - if @note.errors.any?
    #error_explanation
      %h2= "#{pluralize(@note.errors.count, "error")} prohibited this note from being saved:"
      %ul
        - @note.errors.full_messages.each do |message|
          %li= message
  %div{:class => 'edit-check-options-row'}
    =f.hidden_field(:company_id)
    =f.hidden_field(:author)
    =label_tag(:subject, "Subject", :id => 'text-field-label')
    =f.text_field(:subject)
    =label_tag(:body, "Note", :id => 'text-field-label')
    =f.text_area(:body)

  .actions
    = f.submit 'Save'