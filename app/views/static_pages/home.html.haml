%div{:id => 'query-table'}
  %table
    %tr
      %th EIN
      %th Round Number
      %th Jobs Retained
      %th Amount Approved
      %th Column 5
      %th Column 6
      %th Column 7
    - @applications.each do |application|  
      %tr
        %td= application.ein
        %td= application.round
        %td= application.jobs_retained
        %td= application.amount_approved
        %td= get_owner(application.ein).name
        %td val6
        %td val7
    

%div{:id => 'query-results'}
  %h3{:class => 'query-result-header'} Number of Applicants: ---
  %h3{:class => 'query-result-header'}  Percentage of Applicants: ---
